{
    "preset": "laravel",
    "rules": {
        "concat_space": {
            "spacing": "one"
        },
        "braces": {
            "position_after_functions_and_oop_constructs": "next",
            "allow_single_line_empty_functions": false
        },
        "no_unused_imports": true,
        "single_quote": true,
        "array_syntax": {
            "syntax": "short"
        }
    }
}
