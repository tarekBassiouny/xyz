{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "xyz/xyz-lms",
    "description": "XYZ LMS Backend (Laravel 11)",
    "type": "project",
    "license": "MIT",

    "require": {
        "php": "^8.4",
        "laravel/framework": "^11.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.8",
        "league/flysystem-aws-s3-v3": "^3.0",
        "php-open-source-saver/jwt-auth": "*",
        "toshy/bunnynet-php": "^8.0"
    },

    "require-dev": {
        "fakerphp/faker": "^1.23",
        "knuckleswtf/scribe": "^5.6",
        "larastan/larastan": "^2.11",
        "laravel/pail": "^1.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.36",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.5",
        "pestphp/pest": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.4",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.2"
    },

    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "scripts": {
        "post-autoload-dump": [
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "lint": [
            "./vendor/bin/pint --test",
            "./vendor/bin/phpstan analyse"
        ],
        "fix": [
            "./vendor/bin/pint",
            "./vendor/bin/rector process"
        ],
        "rector:check": [
            "./vendor/bin/rector process --dry-run"
        ],
        "rector:fix": [
            "./vendor/bin/rector process"
        ],
        "quality": [
            "./vendor/bin/pint --test",
            "./vendor/bin/phpstan analyse",
            "./vendor/bin/rector process --dry-run",
            "php artisan test"
        ],
        "test": [
            "php artisan test"
        ],
        "postman:generate": [
            "@postman:scribe",
            "@postman:download",
            "@postman:restructure"
        ],

        "postman:scribe": [
            "php artisan scribe:generate"
        ],

        "postman:download": [
            "curl http://xyz-lms.test/docs.postman -o postman/scribe.postman.json"
        ],

        "postman:restructure": [
            "node postman/restructure.js"
        ]
    },

    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },

    "minimum-stability": "stable",
    "prefer-stable": true
}
